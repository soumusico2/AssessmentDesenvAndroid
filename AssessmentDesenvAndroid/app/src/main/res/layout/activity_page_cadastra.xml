<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hebertnunes.assessmentdesenvandroid.Activity.PageCadastra">

    <TextView
        android:id="@+id/Formulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="FormulÃ¡rio de Cadastro" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Nome"
        android:layout_below="@+id/Formulario"
        android:layout_alignStart="@+id/edit_nome" />

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/nome"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Login"
        android:layout_below="@+id/edit_nome"
        android:layout_alignStart="@+id/edit_nome" />

    <EditText
        android:id="@+id/edit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:layout_below="@+id/edit_login"
        android:layout_alignEnd="@+id/nome"
        android:layout_marginTop="17dp" />

    <EditText
        android:id="@+id/edit_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/senha" />

    <TextView
        android:id="@+id/confirmar_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Confirmar Senha"
        android:layout_below="@+id/edit_senha"
        android:layout_alignStart="@+id/edit_senha" />

    <EditText
        android:id="@+id/edit_conf_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/confirmar_senha"
        android:layout_alignStart="@+id/confirmar_senha" />

    <TextView
        android:id="@+id/cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_cpf"
        android:layout_below="@+id/edit_conf_senha"
        android:layout_marginTop="11dp"
        android:text="CPF" />

    <EditText
        android:id="@+id/edit_cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_login"
        android:layout_below="@+id/edit_conf_senha"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Button" />

</android.widget.RelativeLayout>
